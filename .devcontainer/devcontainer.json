{
    "name": "MQTT Development Environment",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "editorconfig.editorconfig",
                "ms-toolsai.jupyter",
                "analytic-signal.preview-pdf",
                "ms-python.pylint",
                "ms-python.autopep8"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python3.11"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "git": "latest",
        "python": "3.11",
        "node": "18"
    },
    "forwardPorts": [1883, 8883],
    "portsAttributes": {
        "1883": {
            "label": "Mosquitto MQTT",
            "onAutoForward": "notify"
        },
        "8883": {
            "label": "Mosquitto MQTT over TLS",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y python3-pip && chmod +x ./setup.sh && ./setup.sh",
    "remoteUser": "vscode"
}